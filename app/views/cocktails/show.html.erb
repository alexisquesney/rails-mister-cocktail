<h1><%= @cocktail.id %> - <%= @cocktail.name %></h1>
<%= link_to 'add a dose', new_cocktail_dose_path(@cocktail) %><br>
<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %><br>
<% @cocktail.doses.each do |dose| %>
  <%= dose.description %>
  <%= dose.ingredient.name %>
  <%= link_to "delete", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %><br>
<% end %>

<%= simple_form_for([@cocktail, @dose]) do |f| %>
  <%= f.error_notification %>

  <%= f.input :description %>
  <%= f.association :ingredient %>

  <%= f.button :submit %>
<% end %>
